    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Static Plugin Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/plugins/staticFiles.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NodeUnit Tests",
            "program": "${workspaceFolder}/node_modules/.bin/nodeunit",
            "args": [
                "${workspaceFolder}/test/response.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
